@model IEnumerable<Lab_04.Models.Course>
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                       
                        @course.Datetime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.Datetime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture" style="font-size:18px">
                        @course.LectureName <br />
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>

            </li>
        }
    </ul>
</div>