@model IEnumerable<Lab_04.Models.Course>

@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            <li>
                <div class="date">
                    <div class="month">
                        @course.Datetime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.Datetime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecture" style="font-size:18px">
                        @course.LectureName <br />
                    </span>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <div class="action" style="left: 70px; position: absolute;">
                    @Html.ActionLink("Edit", "Edit", new { id = course.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = course.Id })
                </div>
            </li>
        }
    </ul>
</div>
